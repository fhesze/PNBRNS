% table of contents
%
\def\tableofcontents{%
  \@restonecolfalse\if@twocolumn\@restonecoltrue\onecolumn\fi
  \@starttoc{toc}\if@restonecol\twocolumn\fi%
}
%
%
\def\@makechapterhead#1{{%
  \Large\bf\thechapter\quad\raggedright #1\par%
  \vskip2mm plus 1mm minus 1mm}%
}
%
\def\section{%
  \pagebreak[2]%
  \@startsection{section}{1}{\z@}{4mm plus 3mm minus 2mm}{1mm plus 0.5mm minus 0.4mm}%
  {\reset@font\large\bf\raggedright\parfillskip0em plus1fil}%
}
\def\subsection{%
  \@startsection{subsection}{2}{\z@}{8mm plus 3mm minus 2mm}{1mm plus 0.5mm minus 0.4mm}%
  {\reset@font\normalsize\bf\raggedright}%
}
