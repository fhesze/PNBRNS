  \makebox[30mm][l]{return value:\quad}}%
  \nobreak{#1\par}\endgroup}
%\long\def\return#1{{\bf return value:} #1}%
\long\def\lcommand#1#2#3{%
  \setbox\buf=\hbox{{\tt #1(}} \len=\wd\buf \rem=\textwidth \advance\rem by-\len%
  \vskip1.5mm plus2mm minus0.8mm%
  \parbox[t]{\len}{{\tt #1(}}\parbox[t]{\rem}{{\tt #2)}\vskip2pt}%
  \par\nobreak{\leftskip5mm #3\par}}
