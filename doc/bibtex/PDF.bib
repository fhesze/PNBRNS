  year = {2006},
  editor = {Philip J. Binning and Peter K. Engesgaard and Helge K. Dahle and
	George F. Pinder and William G. Gray},
  address = {Copenhagen Denmark},
  abstract = {Several studies have demonstrated the important role played by transverse
	dispersion along the lateral fringe of chemical plumes in porous
